{
  "name": "spiral/[component-name]",
  "type": "library",
  "description": "Component Template Repository",
  "license": "MIT",
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "~8.0",
    "mockery/mockery": "^1.1",
    "spiral/code-style": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\Template\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Template\\Tests\\": "tests/Template/"
    }
  }
}
